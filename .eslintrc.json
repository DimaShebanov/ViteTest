{
  "env": {
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "react-app",
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:import/errors",
    "plugin:react-hooks/recommended",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:testing-library/recommended",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended",
    "plugin:cypress/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["src/client/**/*.{ts,tsx}"],
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
          "typescript": {
            "alwaysTryTypes": true
          }
        }
      }
    },
    {
      "files": ["webpack/**/*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": 0
      }
    },
    {
      "files": ["update-schema-definitions.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": 0,
        "no-console": 0
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier",
    "typescript",
    "react-hooks",
    "testing-library",
    "jest-dom",
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-expressions": 0, // this trick adds support of optional chaining
    "no-shadow": 0,
    "@typescript-eslint/no-shadow": 1, // this makes no-shadow to work correctly with TS
    "@typescript-eslint/no-array-constructor": 2,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/default-param-last": 2,
    "@typescript-eslint/no-dupe-class-members": 2,
    "@typescript-eslint/no-extra-semi": 2,
    "@typescript-eslint/no-unused-expressions": 2,
    "@typescript-eslint/ban-ts-comment": 1,
    "@typescript-eslint/ban-types": [
      1,
      {
        "types": {
          "{}": false,
          "object": false,
          "Function": false
        }
      }
    ],
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/explicit-member-accessibility": 0,
    "@typescript-eslint/no-empty-function": 1,
    "@typescript-eslint/no-empty-interface": 1,
    "@typescript-eslint/no-unused-vars": [
      2,
      {
        "ignoreRestSiblings": true
      }
    ],
    "@typescript-eslint/no-use-before-define": 0,
    "arrow-body-style": [2, "as-needed"],
    "camelcase": 0,
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "import/extensions": [
      2,
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/imports-first": 2,
    "import/newline-after-import": 2,
    "import/no-anonymous-default-export": 1,
    "import/no-cycle": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ],
    "import/order": [
      2,
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always-and-inside-groups"
      }
    ],
    "import/prefer-default-export": 0,
    "jsx-a11y/anchor-is-valid": 1,
    "jsx-a11y/click-events-have-key-events": 1,
    "jsx-a11y/control-has-associated-label": 1,
    "jsx-a11y/label-has-associated-control": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 1,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/no-static-element-interactions": 1,
    "require-await": 2,
    "no-await-in-loop": 2,
    "no-continue": 0,
    "no-debugger": 1,
    "no-empty": [2, { "allowEmptyCatch": true }],
    "no-empty-function": 2,
    "no-loop-func": 2,
    "no-param-reassign": 0,
    "no-prototype-builtins": 0,
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "no-useless-constructor": 2,
    "prefer-destructuring": 1,
    "react/destructuring-assignment": 1,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".tsx"]
      }
    ],
    "react/jsx-key": 2,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-props-no-spreading": 0,
    "react/no-array-index-key": 1,
    "react/prop-types": 0,
    "react/state-in-constructor": 0,
    "react/static-property-placement": 0,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "sort-imports": [
      1,
      {
        "ignoreDeclarationSort": true
      }
    ],
    "spaced-comment": 1,
    "testing-library/await-async-query": 2,
    "testing-library/no-await-sync-query": 2,
    "testing-library/prefer-find-by": 2,
    "testing-library/prefer-wait-for": 2,
    "testing-library/prefer-screen-queries": 2,
    "testing-library/prefer-presence-queries": 2,
    "testing-library/no-debug": 2,
    "testing-library/no-dom-import": 2,
    "testing-library/no-wait-for-empty-callback": 2,
    "jest-dom/prefer-to-have-text-content": 2,
    "jest-dom/prefer-checked": 2,
    "jest-dom/prefer-enabled-disabled": 2,
    "jest-dom/prefer-required": 2,
    "jest-dom/prefer-to-have-attribute": 2,
    "jest-dom/prefer-empty": 2,
    "no-console": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".jsx", ".tsx", ".json"]
      }
    }
  }
}
